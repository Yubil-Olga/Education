block variables

doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    link(rel="apple-touch-icon", sizes="120x120", href="favicons/apple-touch-icon-120.png")
    link(rel="shortcut icon", type="image/png", sizes="16x16", href="favicons/favicon-16.png")
    link(rel="shortcut icon", type="image/png", sizes="32x32", href="favicons/favicon-32.png")
    link(rel="shortcut icon", type="image/png", sizes="48x48", href="favicons/favicon-48.png")
    meta(name="description", content="Toxin - бронирование номеров в отеле")
    meta(name="keywords", content="Toxin, бронирование номеров, отель")
    title=pageTitle
  body
    include ../components/header/header
    include ../components/footer/footer

    -
      const headerNavigation = [
        { name: "О нас", href: "/mock-address/change-me", isExpanded: false, },
        { name: "Услуги", href: "/mock-address/change-me", isExpanded: true, },
        { name: "Вакансии", href: "/mock-address/change-me", isExpanded: false, },
        { name: "Новости", href: "/mock-address/change-me", isExpanded: false, },
        { name: "Соглашения", href: "/mock-address/change-me", isExpanded: true, },
      ]

      const footerNavigation = [
        {
          title: "навигация", 
          list: [{ name: "О нас", }, { name: "Новости", }, { name: "Служба поддержки", }, { name: "Услуги", }],
        },
        {
          title: "о нас", 
          list: [{ name: "О сервисе", }, { name: "Наша команда", }, { name: "Вакансии", }, { name: "Инвесторы", }],
        },
        {
          title: "Служба поддержки", 
          list: [{ name: "Соглашения", }, { name: "Сообщества", }, { name: "Связь с нами", }],
        }
      ]
  
    block header
      +header({
        isAuthed: false, 
        language: "ru", 
        items: headerNavigation,
      })
    block main
    block footer
      +footer({
        isCreative: false,
        withBorder: footerWithBorder || null,
        slogan: "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»",
        formTitle: "Подписка",
        formDescription: "Получайте специальные предложения и новости сервиса",
        copyright: "Copyright © 2018 Toxin отель. Все права зачищены.",
        items: footerNavigation,
      })