extends ../page-template
include ../../components/form-booking/form-booking
include ../../components/advantages/advantages
include ../../components/bullet-list/bullet-list
include ../../components/review/review
include ../../components/chart/chart
include ../../components/heading/heading

block variables
  -
    const pageTitle = 'Room details page'
    const footerWithBorder = true
    const gallery = [
      { src: 'images/room888-1.jpg', alt: 'room #888', },
      { src: 'images/room888-2.jpg', alt: 'room #888', },
      { src: 'images/room888-3.jpg', alt: 'room #888', },
    ]
    const advantages = [
      { title: 'Комфорт', description: 'Шумопоглощающие стены', icon: 'insert_emoticon', },
      { title: 'Удобство', description: 'Окно в каждой из спален', icon: 'location_city', },
      { title: 'Уют', description: 'Номер оснащён камином', icon: 'whatshot', isUnderlined: false, },
    ]
    const reviews = [
      {
        name: 'Мурад Сарафанов', 
        src: 'images/reviews/review2.png', 
        voiceCounter: 12,
        isLiked: true,
        date: '5 дней назад',
        comment: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
      },
      {
        name: 'Патрисия Стёклышкова',
        src: 'images/reviews/review1.png',
        voiceCounter: 2,
        isLiked: false,
        date: 'Неделю назад',
        comment: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',
      }
    ]

block main
  main.room-details
    .room-details__gallery
      .room-details__gallery-item
        img.room-details__image(src='images/room888-1.jpg', alt='room #888')
      .room-details__gallery-item
        img.room-details__image(src='images/room888-2.jpg', alt='room #888')
        img.room-details__image(src='images/room888-3.jpg', alt='room #888')
    .room-details__description
      .room-details__info
        .room-details__item
          .room-details__subtitle
            +heading({ text: 'Сведения о номере', tag: 'h2', })
          .room-details__advantages
            each advantage in advantages
              +advantages(advantage)
        .room-details__item
          .room-details__subtitle
            +heading({ text: 'Впечатления от номера', tag: 'h2', })
          +chart({ 
            data: [ 
              { name: 'Великолепно', quantity: 130, color1: '#FFE39C', color2: '#FFBA9C', }, 
              { name: 'Хорошо', quantity: 65, color1: '#BC9CFF', color2: '#8BA4F9', }, 
              { name: 'Удовлетворительно', quantity: 65, color1: '#6FCF97', color2: '#66D2EA', }, 
              { name: 'Разочарован', quantity: 0, color1: '#909090', color2: '#3D4975', }, 
            ], 
          })
        .room-details__reviews
          .room-details__item
            .room-details__subtitle
              +heading({ text: 'Отзывы посетителей номера', tag: 'h2', })

              - let reviewsNumberText;
              case true
                when reviews.length === 0
                  - reviewsNumberText = 'отзывов';
                when reviews.length === 1
                  - reviewsNumberText = 'отзыв';
                when reviews.length > 4 
                  - reviewsNumberText = 'отзывов';
                default
                  - reviewsNumberText = 'отзыва';

              span.room-details__reviews-number= `${reviews.length} ${reviewsNumberText}`
            .room-details__reviews-wrapper
              each comment in reviews
                +review(comment)
        .room-details__rules
          .room-details__item
            .room-details__subtitle
              +heading({ text: 'Правила', tag: 'h2', })
            +bullet-list({ 
              rules: [ 
                { text: 'Нельзя с питомцами', }, 
                { text: 'Без вечеринок и мероприятий', }, 
                { text: 'Время прибытия — после 13:00, а выезд до 12:00', }, 
              ], 
            })
        .room-details__item
          .room-details__subtitle
            +heading({ text: 'Отмена', tag: 'h2', })
          p.room-details__details
            | Бесплатная отмена в течение 48 ч.
            | После этого при отмене не позднее чем за 5 дн. до прибытия
            | вы получите полный возврат за вычетом сбора за услуги.
      .room-details__booking
        +form-booking({ number: 888, roomStatus: 'люкс', price: 9990, discount: 2179, serviceCharge: 0, additionalServiceCharge: 300, days: 4, })
