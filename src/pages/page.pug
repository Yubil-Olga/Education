include ../components/header/header
include ../components/footer/footer
block variables

doctype html
html
    head
        meta(charset = 'utf-8')
        meta(name='viewport', content="initial-scale=1.0, width=device-width")
        link(rel="shortcut icon", href="favicons/favicon.ico", type="image/x-icon")
        meta(name="description", content="Toxin - бронирование номеров в отеле")
        meta(name="keywords", content="Toxin, бронирование номеров, отель")
        title= pageTitle
    body
        - var navigation = [
        - {name: "О нас", href: "/mock-address/change-me", expanded: false},
        - {name: "Услуги", href: "/mock-address/change-me", expanded: true},
        - {name: "Вакансии", href: "/mock-address/change-me", expanded: false},
        - {name: "Новости", href: "/mock-address/change-me", expanded: false},
        - {name: "Соглашения", href: "/mock-address/change-me", expanded: true}
        - ]
        - var footernavigation = [
        - {title: "навигация", list: ["О нас", "Новости", "Служба поддержки", "Услуги"]},
        - {title: "о нас", list: ["О сервисе", "Наша команда", "Вакансии", "Инвесторы"]},
        - {title: "Служба поддержки", list: ["Соглашения", "Сообщества", "Связь с нами"]}
        - ]
        - var footerslogan = "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
        - var footerformtitle = "Подписка"
        - var footerformdescription = "Получайте специальные предложения и новости сервиса"
        - var copyright = "Copyright © 2018 Toxin отель. Все права зачищены."

        block header
            +header(false, "ru", ...navigation)
        block main
        block footer
            +footer(false, footerslogan, footerformtitle, footerformdescription, copyright, ...footernavigation)
            
