include ../field/field
include ../date-field/date-field

mixin date-dropdown({ type, firstTitle="firstTitle", secondTitle="secondTitle" } = {})
  .date-dropdown.js-date-dropdown
    case type
      when "single"
        .date-dropdown__input.js-date-dropdown__input
          +date-field({ name: firstTitle, width: "large"})
      default
        .date-dropdown__input.js-date-dropdown__input
          +date-field({ name: firstTitle})
        .date-dropdown__input.js-date-dropdown__input
          +date-field({ name: secondTitle})