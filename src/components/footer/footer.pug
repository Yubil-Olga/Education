include ../logo/logo
include ../subscription-input/subscription-input
 
mixin footer({creative, slogan, formTitle, formDescription, copyright}, items)
  footer.footer(class=creative ? "footer_creative" : "")
    section.footer__navigation
      section.footer__section
        .footer__logo
          +logo
        p.footer__description=slogan
      unless creative
        each item in items
          section.footer__section
            h3.footer__subtitle=item.title
            ul.footer__navigation__group
              each link in item.list
                li.footer__navigation__item
                  a.footer__navigation__link(href="/mock-address/change-me")=link
        form.footer__section
          h3.footer__subtitle=formTitle
          p.footer__description=formDescription
          .footer__control
            +subscription-input
    .footer__wrapper
      .footer__copyright-bar
        unless creative
          p.footer__copyright=copyright
        .footer__social
          a(href="https://twitter.com/" rel="noopener noreferrer" target="_blank").footer__social__icon.footer__social__icon_twitter
          a(href="https://www.facebook.com/" rel="noopener noreferrer" target="_blank").footer__social__icon.footer__social__icon_fb
          a(href="https://www.instagram.com/" rel="noopener noreferrer" target="_blank").footer__social__icon.footer__social__icon_instagram   
