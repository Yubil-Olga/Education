include ../logo/logo
include ../subscription-input/subscription-input
 
mixin footer({creative, slogan, formTitle, formDescription, copyright}, items)
  footer.footer(class=creative ? "footer-creative" : "")
    section.footer__navigation
      section.footer__section
        +logo
        p.footer__description=slogan
      unless creative
        each item in items
          section.footer__section
            h3.footer__subtitle=item.title
            ul.navigation__group
              each link in item.list
                li.navigation__item
                  a(href="/mock-address/change-me")=link
        form.footer__section
          h3.footer__subtitle=formTitle
          p.footer__description=formDescription
          .footer__control
            +subscription-input
    .footer__wrapper
      .copyright-bar(class=creative ? "center" : "space-between")
        unless creative
          p=copyright
        .social
          a(href="https://twitter.com/" rel="noopener noreferrer" target="_blank").social__icon.twitter
          a(href="https://www.facebook.com/" rel="noopener noreferrer" target="_blank").social__icon.fb
          a(href="https://www.instagram.com/" rel="noopener noreferrer" target="_blank").social__icon.instagram   
