include ../rate-btn/rate-btn

mixin card-room(url, number, lux, price, stars, comments)
    .card-room
        .card-room__image
            img(src=url)
            .card-room__slider
                i.material-icons expand_more
                i.material-icons expand_more
        footer.card-room__footer
            .card-room__room-details
                h2.room-details__room-number=number
                    if lux
                        span  люкс
                .room-details__price=price
            .card-room__room-rating
                +rate-btn(5,stars)
                .room-rating__comments=comments

