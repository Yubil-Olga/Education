include ../rate-button/rate-button

mixin card-room({ link, images = [], number = 888, isLux = true, price = 9990, stars = 5, reviews = 145, } = {}) 
  section.card-room.js-card-room
    .card-room__slider
      .card-room__gallery.js-card-room__gallery
        each image in images
          img(src=image alt=`room ${number}`).card-room__image
      .card-room__decoration
    a(href=link).card-room__description
      .card-room__room-details
        h2.card-room__room-number=number
          if isLux
            span.card-room__luxury люкс
        .card-room__price #{price}₽
      .card-room__room-rating
        +rate-button({ total: 5, rating: stars, })
        .card-room__comments=reviews



