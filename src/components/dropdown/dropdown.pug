include ../input/input
mixin dropdown(title, ...items)
    .dropdown
        .dropdown__selection
            if title == "room"
                p.dropdown__title.room Сколько комнат
            else
                +input("Сколько гостей")
                i.material-icons favorite_border
            //- .arrow_direction_bottom
        .dropdown__menu
            each item in items
                .menu__option
                    h3.option__title=item
                    .option__counter
                        .counter__decrement
                        input.counter-item(value="0" readonly)
                        .counter__increment
            unless title == "room"
                .menu__control
                    .clean очистить
                    .accept применить