mixin like-btn({count = 0, isChecked = false} = {})
  if count < 0
    - count = 0
  label.like-btn.js-like-btn(data-count=isChecked ? count+1 : count class= isChecked ? "like-btn_active" : "")
    if isChecked
      i.like-btn__icon.js-like-btn__icon favorite
    else
      i.like-btn__icon.js-like-btn__icon favorite_border
    input.like-btn__input(type="checkbox" value="like" checked=isChecked)
        



        